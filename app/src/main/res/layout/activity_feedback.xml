<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/common_top_view" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/pay_bg"
            android:orientation="vertical"
            android:padding="@dimen/dp_10">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/opinion_input_bg"
                android:gravity="left"
                android:hint="写下对我们说的话吧！"
                android:lines="8"
                android:padding="@dimen/dp_15"
                android:textColor="@color/white"
                android:textColorHint="@color/gray_cccccc"
                android:textSize="@dimen/text_16" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@drawable/skin_btn_ripper"
                android:text="@string/confirm"
                android:textColor="@color/white"
                android:textSize="@dimen/text_16" />
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>